<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4A4A4">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="600dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="차량 정보"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="35dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_num"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="차량 번호"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/car_num"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="1613945"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_type"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="차    종"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/car_type"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="K5"
                android:textAlignment="center"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_oil"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="기름 종류"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/car_oil"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="경유"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_battery"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="배터리방전"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/car_battery"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="text"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>


        <AbsoluteLayout
            android:layout_width="500dp"
            android:layout_height="321dp">

            <TextView

                android:id="@+id/oil_car"
                android:layout_width="74dp"
                android:layout_height="99dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="47dp"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="0dp"
                android:layout_x="211dp"
                android:layout_y="163dp"
                android:fontFamily="@font/lobster"
                android:gravity="center"
                android:text="2"
                android:textAlignment="center"
                android:textSize="80dp" />

            <ImageView
                android:layout_width="306dp"
                android:layout_height="250dp"
                android:layout_x="95dp"
                android:layout_y="52dp"
                android:fontFamily="@font/lobster"
                android:src="@drawable/oil2" />
        </AbsoluteLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>