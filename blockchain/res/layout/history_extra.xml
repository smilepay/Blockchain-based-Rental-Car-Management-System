<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4A4A4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="521dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lobster"
                android:text="기타 결함"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="배터리 방전"
                android:textAlignment="center"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/bettery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="없음"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="타이어 손상"
                android:textAlignment="center"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/tire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="없음"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text=" 점화 플러그   결함"
                android:textAlignment="center"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="없음"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="브레이크 고장"
                android:textAlignment="center"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/breaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="없음"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="스타터 모터     고장"
                android:textAlignment="center"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/motor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="주유된 양"
                android:textAlignment="center"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/oil_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text=" 추가 사항"
                android:textAlignment="center"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>

        <AbsoluteLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="61dp"
                android:layout_height="70dp"
                android:layout_x="0dp"
                android:layout_y="0dp"
                android:src="@drawable/battery" />

            <ImageView
                android:layout_width="54dp"
                android:layout_height="67dp"
                android:layout_x="59dp"
                android:layout_y="0dp"
                android:src="@drawable/tire" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="71dp"
                android:layout_x="109dp"
                android:layout_y="0dp"
                android:src="@drawable/plug" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="67dp"
                android:layout_x="154dp"
                android:layout_y="0dp"
                android:src="@drawable/brake1" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="65dp"
                android:layout_x="199dp"
                android:layout_y="2dp"
                android:src="@drawable/motor" />

            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_x="252dp"
                android:layout_y="3dp"
                android:src="@drawable/oil" />

            <ImageView
                android:layout_width="49dp"
                android:layout_height="64dp"
                android:layout_x="302dp"
                android:layout_y="0dp"
                android:src="@drawable/add_extra" />
        </AbsoluteLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>