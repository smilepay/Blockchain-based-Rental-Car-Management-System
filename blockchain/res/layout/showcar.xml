<?xml version="1.0" encoding="UTF-8"?>

    <android.support.constraint.ConstraintLayout
    android:background="#4B4848"
    android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_height="110dp"
        android:layout_width="400dp"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#CECCCC"
        android:text="Select Car Type"
        android:fontFamily="@font/lobster"
        android:layout_weight="1"
        android:id="@+id/textView"

      />

        <ImageView
            android:id="@+id/levante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button2" />

    <ImageView
        android:background="@drawable/button3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/suv"
        android:layout_marginBottom="10dp"/>

    <Button
        android:background="@drawable/button5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:id="@+id/k5"/>

    <ImageView
        android:background="@drawable/button4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:id="@+id/santafe"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:background="@drawable/button6"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/benz"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:background="@drawable/button1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/sonata"/>

</LinearLayout>

</android.support.constraint.ConstraintLayout>